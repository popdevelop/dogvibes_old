#!/bin/bash

host=$1

function amp {
  echo "============================================="
  call=http://$host/amp/0/$1
  echo $call
  curl $call
  echo
}

function dogvibes {
  echo "============================================="
  call=http://$host/dogvibes/$1
  echo $call
  curl $call
  echo
}

amp "connectSpeaker?nbr=0"

